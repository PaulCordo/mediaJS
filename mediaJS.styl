@keyframes left
  0%
    transform translate(0,0) rotate(90deg)
  50%
    transform translate(-10px,0) rotate(90deg)
  100%
    transform translate(0,0) rotate(90deg)
@keyframes right
  0%
    transform translate(0,0) rotate(270deg)
  50%
    transform translate(10px,0) rotate(270deg)
  100%
    transform translate(0,0) rotate(270deg)

.media-js
  height 100%
  width 100%
  &.video
    position relative
    displayflex()
    justify-content center
    align-items center
    -webkit-media-controls
      display none !important
    video
      height 100%
      width 100%
      outline 0
    .controls
      position absolute
      bottom 0
      left 0
      box-sizing border-box
      width 100%
      height 51px
      padding 0 5px 8px
      opacity 1
      .progress-bar
        position absolute
        bottom 0px
        left 0px
        width 100%
        height 6px
        padding 1px 0
        cursor pointer
        background-color rgba(50,50,50,0.1)
        div
          transition height 0.1s
          position absolute
          height 4px
        .loaded
          background-color rgba(250,250,250,0.2)
          transition width 0.2s
        .played
          background-color white
          transition width 0.1s
        .seek
          background-color rgba(255,255,255,0.2)
          &:hover,&.hover
            display inline-block
        &:hover, &.hover
          padding 0
          div
            height 6px
        &:active
          cursor grabbing
      .controls-left
        position absolute
        bottom 11px
        left 0px
        height 36px
        displayinlineflex()
        justify-content space-around
        align-items center
      .play, .fullscreen, .volume-logo, .quality-selector
        background-position center
        background-repeat no-repeat
        cursor pointer
      .play
        display inline-block
        height 36px
        width 72px
        background-size 24px
        background-image url('img/pause.svg')
        &.paused
          background-image url('img/play.svg')
      .time
        margin-left 12px
        display inline-block
        font-family helvetica
        font-weight 100
        font-size 12px
        &.hidden
          display none
        .duration::before
          content ' / '
        div
          display inline
        
      .quality-selector
        position absolute
        overflow hidden
        right 85px
        bottom 11px
        height 36px
        line-height 36px
        width 52px
        font-family helvetica
        font-weight 100
        &:hover, &.hover
          overflow visible
          .qualities
            max-height 216px
            .quality
              opacity 1
              height 36px
        .qualities
          position absolute
          top -36px
          width 100%
          max-height 0px
          transition max-height 0.5s cubic-bezier(1,0,1,0)
          .quality
            width 100%
            line-height 36px
            height 0px
            opacity 0
            transition height 0.5s ease-in-out, opacity 0.5s ease-in-out
            &.selected
              height 36px
              opacity 1
              position absolute
              top 36px
              font-weight bold
      .fullscreen
        position absolute
        right 36px
        bottom 11px
        height 36px
        width 36px
        background-size 80%
        background-image url('img/fullscreen.svg')
        &.full
          background-image url('img/nofullscreen.svg')
      .volume
        height 36px
        display inline-block
        cursor pointer
        displayinlineflex()
        justify-content space-around
        align-items center
        .volume-bar
          display inline-block
          position relative
          height 3px
          width 0px
          transition width 0.5s
          background-color rgba(250,250,250,0.2)
          .volume-level
            position absolute
            background-color white
            height 100%
          &:hover,&.hover,&.active
            background-color rgba(250,250,250,0.4)
        &:hover,&.hover,&.active
          .volume-bar
            width calc(36px + 2vw)
        .volume-logo
          display inline-block
          height 36px
          width 36px
          background-image url('img/volume.svg')
          background-size 50%
        &.muted
          .volume-level
            background-color rgba(100,100,100,0.5)
          .volume-logo
            background-image url('img/muted.svg')
      &.hidden
        transition opacity 0.5s
        opacity 0
        &.stay
          opacity 1
      &:hover, &.hover
        opacity 1
    &.grabbing
      cursor grabbing
      .controls
        opacity 1
  &.picture
    position absolute
    left 0
    top 0
    background-size contain
    background-position center
    background-repeat no-repeat
    
  &.gallery
    .slide
      z-index 0
      position absolute
      left 0
      top 0
      opacity 0
      visibility hidden
      width 100%
      height 100%
      &.selected
        opacity 1
        visibility visible
      .name
        position absolute
        top 36px
        left 36px
        font-family 'bebas', sans-serif
        background-color rgba(0,0,0,0.7)
        padding 0 6px
        font-weight normal
        font-size 1.5rem
        opacity 1
        transition opacity 0.5s
        &.hidden
          opacity 0
          &:hover,.hover
            opacity 1
        
    .controls
      opacity 1
      transition opacity 0.5s
      &.hidden
        opacity 0
        &:hover,.hover
          opacity 1
    .next,.previous
      z-index 1
      position fixed
      top calc(50vh - 21px)
      height 120px
      width 42px
      background-image url('img/arrow_down_white.svg')
      background-size 36px
      background-position center
      background-repeat no-repeat
      cursor pointer
      &:hover
        animation-duration 2s
        animation-iteration-count infinite
      &.hidden
        visibility hidden
    .next
      right 0
      transform rotate(270deg)
      animation-name right
    .previous
      left 0
      transform rotate(90deg)
      animation-name left
